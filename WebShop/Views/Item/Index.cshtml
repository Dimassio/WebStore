@model List<WebShop.Models.Item>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1> Онлайн магазин </h1>
    <p class="lead">Покупай! Торопись!</p>
</div>

<h4> Админ: dmitry.zvonorev@phystech.edu: Chaos666^_^ </h4>

<div class="row">
    <h2> Товары на распродажу: </h2>
    <div class="row">
        @foreach (var item in Model)
        {
            if (!item.ForSale)
            {
                continue;
            }
            <div class="col-lg-3">
                <h5>Name: @item.Name</h5>
                <h5>Price: @item.Price</h5>
                <a href="#" onClick="inBasket()"><h5>В корзину</h5></a>
            </div>
        }
    </div>
</div>

@if (User.IsInRole("admin"))
{
    <div class="row">
        <h2>Все товары(потом надо будет скрыть от всех, кроме админа):</h2>
        @foreach (var item in Model)
        {
            <div class="col-lg-3">
                <h5>Name: @item.Name</h5>
                <h5>Price: @item.Price</h5>
                <a href="#"><h5>В корзину</h5></a>
            </div>
        }
    </div>
}