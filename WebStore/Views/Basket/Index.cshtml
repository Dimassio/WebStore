@using WebStore.Models

@model List<BasketType>
@{
    ViewBag.Title = "Index";
}

<h2>Корзина</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3">
            <h5>Название: @item.Name</h5>
            <h5>Описание: @item.Description</h5>
            <h5>Цена: @item.Price</h5>
            @Html.ActionLink("Убрать из корзины", "Delete", "Basket", new { id = @item.BasketTypeId }, null)
        </div>
    }
</div>

@if (Model.Count != 0 && User.Identity.IsAuthenticated)
{
    <h2>@Html.ActionLink("Сделать заказ", "Make", "Order") </h2>
}
